# =============================================================================
# RESEARCH PAPER CURATOR - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Research Paper Curator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# API SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# CORS (comma-separated origins, use * for all in development)
CORS_ORIGINS=http://localhost:3000,http://localhost:7860,http://localhost:8000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_SEARCH_PER_MINUTE=20
RATE_LIMIT_BURST=10

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=change-this-to-a-secure-random-string
API_KEY_ENABLED=false
API_KEY=your-api-key-here

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=research_papers
DB_USER=raguser
DB_PASSWORD=ragpass123

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# =============================================================================
# OPENSEARCH (Optional)
# =============================================================================
OPENSEARCH_ENABLED=false
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200

# =============================================================================
# LLM - GROQ
# =============================================================================
LLM_PROVIDER=groq
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT=60

# =============================================================================
# LLM - OLLAMA (Optional)
# =============================================================================
OLLAMA_ENABLED=false
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=120

# =============================================================================
# EMBEDDINGS
# =============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_ENABLED=true

# =============================================================================
# SEARCH & RETRIEVAL
# =============================================================================
SEARCH_TOP_K=10
SEARCH_MIN_SCORE=0.5
SEARCH_CACHE_TTL=3600
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_PAPER=50

# =============================================================================
# MESSAGE QUEUE (Optional)
# =============================================================================
RABBITMQ_ENABLED=false
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# CELERY WORKER (Optional)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# MONITORING (Optional)
# =============================================================================
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

SENTRY_ENABLED=false
SENTRY_DSN=

# =============================================================================
# GRADIO UI
# =============================================================================
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false
GRADIO_AUTH_ENABLED=false
GRADIO_USERNAME=admin
GRADIO_PASSWORD=admin

# =============================================================================
# AUDIO (Optional)
# =============================================================================
AUDIO_ENABLED=false
WHISPER_MODEL_SIZE=base
STT_MODEL=openai/whisper-base
TTS_MODEL=coqui/XTTS-v2

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# =============================================================================
# CDN (Optional)
# =============================================================================
CDN_ENABLED=false
CDN_PROVIDER=cloudflare
CDN_URL=

# =============================================================================
# AIRFLOW (Optional)
# =============================================================================
AIRFLOW_ENABLED=false
AIRFLOW_HOME=/opt/airflow
AIRFLOW_WEBSERVER_PORT=8080

# =============================================================================
# PRODUCTION SETTINGS (Only for production)
# =============================================================================
SSL_ENABLED=false
SSL_CERTFILE=
SSL_KEYFILE=
LOAD_BALANCER_ENABLED=false