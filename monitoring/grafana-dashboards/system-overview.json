{
  "dashboard": {
    "title": "RAG System - Overview",
    "uid": "rag-system-overview",
    "tags": ["rag-system", "overview"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"rag-api\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "UP", "color": "green"}
            ]
          }
        }
      },
      
      {
        "id": 2,
        "title": "Total Papers Indexed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rag_total_papers",
            "refId": "A"
          }
        ]
      },
      
      {
        "id": 3,
        "title": "Questions Answered (24h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "increase(rag_questions_total[24h])",
            "refId": "A"
          }
        ]
      },
      
      {
        "id": 4,
        "title": "Average Response Time",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "avg(rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "s"
        }
      },
      
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"api\"}[5m]) * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "%", "max": 100, "show": true}
        ]
      },
      
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container=\"api\"} / container_spec_memory_limit_bytes{container=\"api\"} * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "%", "max": 100, "show": true}
        ]
      },
      
      {
        "id": 7,
        "title": "Pod Autoscaling",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"rag-api-hpa\"}",
            "legendFormat": "Current Replicas",
            "refId": "A"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_min_replicas{horizontalpodautoscaler=\"rag-api-hpa\"}",
            "legendFormat": "Min Replicas",
            "refId": "B"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_max_replicas{horizontalpodautoscaler=\"rag-api-hpa\"}",
            "legendFormat": "Max Replicas",
            "refId": "C"
          }
        ]
      },
      
      {
        "id": 8,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{container=\"api\"}[5m])",
            "legendFormat": "Receive - {{pod}}",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{container=\"api\"}[5m])",
            "legendFormat": "Transmit - {{pod}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "bytes/s", "format": "bytes", "show": true}
        ]
      }
    ]
  }
}